doctype html
html
  head
    title Homepage
  body
    h1 Homepage
    a(href="/update-cobj") Add
    table(border="1")
      thead
        tr
          th ID
          th Name
          th Bio
          th Type
      tbody
        each record in records
          tr
            td= record.id
            td= record.properties.name
            td= record.properties.bio
            td= record.properties.type

doctype html
html
  head
    title Homepage
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 Libros
    a(href="/update-cobj") Add
    table(border="1")
      thead
        tr
          th ID
          th Nombre
          th Autor
          th Genero
      tbody
        each record in records
          tr
            td= record.id
            td= record.properties.name
            td= record.properties.author
            td= record.properties.genre
